{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compilar",
            "type": "shell",
            "command": "mkdir -p build && cd build && cmake .. && make",
            "args": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Compila o projeto usando o CMakefile."
        },
        {
            "label": "Compilar Libs",
            "type": "shell",
            "command": "cd build && make build_libs",
            "args": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Compila o projeto usando o CMakefile."
        },
        {
            "label": "Compilar e Executar",
            "dependsOn": "Compilar",
            "type": "shell",
            "command": "${workspaceFolder}/bin/main",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        },
        {
            "label": "Executar",
            "type": "shell",
            "command": "${workspaceFolder}/bin/main",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        }
    ],
}